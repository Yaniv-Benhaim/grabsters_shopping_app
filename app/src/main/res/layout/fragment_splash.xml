<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightBlueGrey"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.splash.SplashFragment">


    <com.airbnb.lottie.LottieAnimationView

        android:id="@+id/lottieView2"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="50dp"
        app:lottie_autoPlay="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/loading_accent" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="200dp"
        android:src="@drawable/logo_grabsters"
        app:layout_constraintBottom_toTopOf="@id/lottieView2"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>