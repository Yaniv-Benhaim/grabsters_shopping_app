<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.intro.screens.FirstScreen">

    <com.airbnb.lottie.LottieAnimationView
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:id="@+id/lottieView"
    android:elevation="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:lottie_autoPlay="true"
    app:lottie_loop="true"
    app:lottie_rawRes="@raw/lottie_firstscreen" />

    <TextView
        android:id="@+id/tvFirstScreenTitle"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lottieView"
        android:text="Welcome to Sixty Minutes!"
        android:fontFamily="@font/camber_bold"
        android:textSize="22sp"
        android:textColor="@color/BLACK"/>

    <TextView
        android:id="@+id/tvFirstScreenDescription"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvFirstScreenTitle"
        android:text="We're excited to meet you! To get started, let's walk\n you through what we are all about"
        android:fontFamily="@font/camber_regular"
        android:textSize="16sp"
        android:textColor="@color/BLACK"/>

    <Button
        android:id="@+id/btnNext1"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="next"
        android:textColor="@color/WHITE"
        android:background="@drawable/btn_blue_accent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>