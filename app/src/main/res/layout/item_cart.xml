<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clOrderSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="12dp"
        android:background="@color/WHITE"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivProductExample"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:src="@drawable/laptop"
            app:layout_constraintDimensionRatio="W,1,1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.3" />


        <TextView
            android:id="@+id/tvProductNameCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:fontFamily="@font/camber_medium"
            android:gravity="start|center_vertical"
            android:text="Asus HD 2020"
            android:textColor="@color/BLACK"
            app:layout_constraintStart_toEndOf="@id/ivProductExample"
            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:id="@+id/tvQuantitiy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/camber_regular"
            android:gravity="start|center_vertical"
            android:text=" Quantity:          1"
            android:textColor="@color/BLACK"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/ivProductExample"
            app:layout_constraintTop_toBottomOf="@id/tvProductNameCart" />

        <TextView
            android:id="@+id/tvItemNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/camber_regular"
            android:gravity="start|center_vertical"
            android:text=" Item number: 12341235dc"
            android:textColor="@color/BLACK"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/ivProductExample"
            app:layout_constraintTop_toBottomOf="@id/tvQuantitiy"

            />

        <TextView
            android:id="@+id/tvTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="12dp"
            android:drawableLeft="@drawable/ic_baseline_attach_money_24"
            android:fontFamily="@font/camber_bold"
            android:gravity="end|center_vertical"
            android:text=" 999.99"
            android:textColor="#4CAF50"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvItemNumber" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>