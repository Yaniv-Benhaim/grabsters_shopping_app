<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvStoreNameWithProducts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/camber_bold"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:text="Ivory"
        android:textColor="@color/BLACK"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/tvStoreEnterStore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/camber_medium"
        android:gravity="end"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:text="Enter store"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/tvStoreNameWithProducts"
        app:layout_constraintStart_toEndOf="@id/tvStoreNameWithProducts"
        app:layout_constraintTop_toTopOf="@id/tvStoreNameWithProducts"
        app:layout_constraintWidth_percent="0.5" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvWithinStoreItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvStoreNameWithProducts" />

</androidx.constraintlayout.widget.ConstraintLayout>